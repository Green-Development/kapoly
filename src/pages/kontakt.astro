---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakt',
};
---

<Layout metadata={metadata}>
    <Features2
    title="Tritt mit uns in Kontakt"
    items={[
      {
        title: 'Kontaktformular',
        description: 'Nutze dieses Kontaktformular, um uns eine Nachricht zu senden',
        icon: 'tabler:forms',
        link: '#form',
      },
      {
        title: 'Persönlich',
        description: 'Besuche uns bei einem unserer Stammtische',
        icon: 'tabler:users',
        link: '/termine',
      },
      {
        title: 'E-Mail',
        description: 'Schreibe uns eine E-Mail: kapoly@familymail.de',
        icon: 'tabler:mail',
        link: 'mailto:kapoly@familymail.de',
      },
    ]}
  />
  <ContactUs
    id="form"
    title="Kontaktformular"
    classes={{"container": "pt-0 md:pt-0 lg:pt-0"}}
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-Mail',
      },
      {
        type: 'text',
        name: 'subject',
        label: 'Betreff',
      },
    ]}
    textarea={{
      label: 'Nachricht',
    }}
    disclaimer={{
      label:
        'Ich stimme der Verarbeitung der Daten gemäß der Datenschutzerklärung zu.'
    }}
    button="Nachricht senden"
  />
</Layout>
